{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid && auth.uid == 'ALLOWED_UID_HERE'",
        ".write": "auth != null && auth.uid == $uid && auth.uid == 'ALLOWED_UID_HERE'",
        "sessions": {
          ".indexOn": ["updatedAt"],
          "$sessionId": {
            "messages": {
              ".indexOn": ["createdAt"]
            }
          }
        }
      }
    }
  }
}
